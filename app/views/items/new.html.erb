<div class="new-item-container">
  <h1>Add New Item</h1>
  <div class="new-item-form-container">
    <div class="new-item-image-container">
      <%= simple_form_for(@item) do |f| %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.button :submit, "Save" %>
      <% end %>

    </div>
    <div class="new-item-form-inputs-container">
      <%= simple_form_for(@item) do |f| %>
        <%= f.input :title %>
        <%= f.input :format %>
        <%= f.input :date, html5: true %>
        <%= f.input :description %>
        <%= f.association :members, collection: @members, label_method: :full_name, as: :check_boxes %>
        <%= f.association :collections, collection: @collections, label_method: :label, as: :check_boxes %>
        <div class="new-item-tags-container">
          <div class="new-item-tag-checkboxes">
            <%= f.association :tags, collection: @tags, as: :check_boxes, item_wrapper_class: "tag-checkbox" %>
          </div>
        </div>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.button :submit, "Save" %>
      <% end %>
    </div>
  </div>

  <div>
    <%= link_to "Back to items", items_path %>
  </div>
</div>
