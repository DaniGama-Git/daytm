<h1>New Item</h1>

<%= simple_form_for(@item) do |f| %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :comment %>
    <%= f.input :format %>
    <%= f.input :date %>
  </div>

<div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<div>
  <%= link_to "Back to items", items_path %>
</div>
