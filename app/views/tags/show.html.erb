<div class="screen-stretch">
  <div>
    <h1 class="text-center mt-4" ><%= @tag.name.capitalize%></h1>
  </div>

  <div class="collections-show-items-cards">
    <% @items.each do |item| %>
      <%= content_tag :div, class: "pop-on-hover" do %>
        <%= render partial: "items/item_card", locals: { item: item } %>
      <% end %>    <% end %>
  </div>
</div>
