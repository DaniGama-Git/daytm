<%= link_to item_path(item.searchable_id) do %>
  <div class="home-collection-card">
    <div class="home-collection-image">
      <% if item.searchable.photos.attached? %>
        <%=cl_image_tag(item.searchable.photos.first.key, width: 78, height: 112, crop: :fill, format: :jpg) %>
      <% end %>
    </div>
    <div class="home-collection-title">
      <h3><%= item.searchable.title %></h3>
    </div>
  </div>
<% end %>
