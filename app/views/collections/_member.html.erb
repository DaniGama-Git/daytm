<% member.searchable.items.each do |item| %>
  <%= link_to item_path(item) do %>
    <div class="home-collection-card">
      <div class="home-collection-image">
        <% if item.photos.attached? %>
          <%=cl_image_tag(item.photos.first.key, width: 78, height: 112, crop: :fill, format: :jpg) %>
        <% end %>
      </div>
      <div class="home-collection-title">
        <h3><%= item.title %></h3>
      </div>
    </div>
  <% end %>
<% end %>
